<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h5 class="card-header">Ingresar al Sistema</h5>
            <form method="post" action="/auth/login">
                
                @Html.ValidationMessage("AuthError")
                <div class="mb-3">
                    <input type="text" name="username" id="username" placeholder="Ingresar usuario"/>
                </div>
                <div class="mb-3">
                    <input type="password" name="password" id="password" placeholder="Ingrese password"/>
                </div>
                <button class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>